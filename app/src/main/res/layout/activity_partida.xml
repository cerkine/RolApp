<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartidaActivity"
    android:id="@+id/partidaActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/fondoinicio"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="100dp"
        android:paddingEnd="90dp"
        android:layout_marginTop="90dp">

        <LinearLayout
            style="@style/partidaLinear">>
            <TextView
                style="@style/textLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Partida 1"
                android:layout_marginTop="0dp"/>
            <Button
                style="@style/entrarbtn"
                android:text="@string/loginbtn"
                android:background="@color/rojo_claro"/>

        </LinearLayout>

    <LinearLayout
        style="@style/partidaLinear">>
        <TextView
            style="@style/textLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Partida 2"
            android:layout_marginTop="0dp"/>
        <Button
            style="@style/entrarbtn"
            android:text="@string/loginbtn"
            android:background="@color/rojo_claro"/>
    </LinearLayout>
        <LinearLayout
           style="@style/partidaLinear">
            <TextView
                style="@style/textLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Partida 3"
                android:layout_marginTop="0dp"/>
            <Button
                android:id="@+id/btnpartida"
                style="@style/entrarbtn"
                android:text="@string/loginbtn"
                android:background="@drawable/btnredondoregistrar"/>
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btnpartidanueva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btnredondoregistrar"
        android:text="@string/nuevapartidabtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="90dp"
        />

</android.support.constraint.ConstraintLayout>